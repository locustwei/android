<?xml version="1.0" encoding="utf-8"?>
<com.wisecleaner.views.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wise="http://schemas.android.com/apk/res/com.wisecleaner.fastimizer"
    android:id="@+id/activity_caption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    wise:borderwidth="1dp"
    wise:borders="bottom"
    wise:bordercolor="@color/titleline"
    android:background="@color/background" >

     <Button
         android:id="@+id/btn_ac_home"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_centerVertical="true"
         android:background="@drawable/btnselector_empty"
         android:drawableLeft="@drawable/left_arrow"
         android:onClick="onClick"
         android:text="         "
         android:textColor="@color/textcolor" />

     <TextView
         android:id="@+id/text_ac_caption"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="@color/textcolor" />

 </com.wisecleaner.views.CustomLayout>