<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <Button
        android:id="@+id/btn_f_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/btnselector_white"
        android:onClick="onClick"
        android:text="@string/done" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_f_done"
        android:layout_alignLeft="@+id/btn_f_done"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/linear_f_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/image_f_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/trash_can" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_f_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/msg_clean_completed"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_below="@+id/linear_f_center"
            android:textColor="@color/textcolor" />

        <TextView
            android:id="@+id/text_f_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Small Text"
            android:layout_below="@+id/text_f_done"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textcolor" />
    </RelativeLayout>

</RelativeLayout>
