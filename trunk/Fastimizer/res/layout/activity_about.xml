<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wise="http://schemas.android.com/apk/res/com.wisecleaner.fastimizer"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/panelback"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_a_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/control_activity_caption" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_a_top"
        android:layout_above="@+id/relativeL_a_homepage"
        android:background="@color/background" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/about_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/textcolor" />

            <TextView
                android:id="@+id/text_a_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/version"
                android:textColor="@color/textcolor" />
        </LinearLayout>
    </RelativeLayout>

    <com.wisecleaner.views.CustomLayout
        android:id="@+id/relativeL_a_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeL_a_facebook"
        android:background="@drawable/btnselector_empty"
        android:minHeight="50dp"
        android:onClick="onClick" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/gray_arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/homepage"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </com.wisecleaner.views.CustomLayout>

    <com.wisecleaner.views.CustomLayout
        android:id="@+id/relativeL_a_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeL_a_twitter"
        android:background="@drawable/btnselector_empty"
        android:minHeight="50dp"
        android:onClick="onClick"
        wise:bordercolor="@color/silverline"
        wise:borders="top"
        wise:borderwidth="1dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/gray_arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/facebook"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </com.wisecleaner.views.CustomLayout>

    <com.wisecleaner.views.CustomLayout
        android:id="@+id/relativeL_a_twitter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeL_a_license"
        android:background="@drawable/btnselector_empty"
        android:minHeight="50dp"
        android:onClick="onClick"
        wise:bordercolor="@color/silverline"
        wise:borders="top"
        wise:borderwidth="1dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/gray_arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/twitter"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </com.wisecleaner.views.CustomLayout>

    <com.wisecleaner.views.CustomLayout
        android:id="@+id/relativeL_a_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btnselector_empty"
        android:minHeight="50dp"
        android:onClick="onClick"
        wise:bordercolor="@color/silverline"
        wise:borders="top"
        android:layout_above="@+id/relativeL_a_copyright"
        wise:borderwidth="1dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/gray_arrow_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/userlicense"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </com.wisecleaner.views.CustomLayout>

    <com.wisecleaner.views.CustomLayout
        android:id="@+id/relativeL_a_copyright"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/panelback"
        android:minHeight="30dp"
        android:onClick="onClick"
        wise:bordercolor="@color/silverline"
        wise:borders="top"
        wise:borderwidth="1dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:text="CopyrightÂ© 2015 Lespeed Inc."
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:gravity="center"
            android:text="All Rights Reserved"
            android:textSize="10sp"/>

    </com.wisecleaner.views.CustomLayout>
    
</RelativeLayout>