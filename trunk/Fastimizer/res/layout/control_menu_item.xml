<?xml version="1.0" encoding="utf-8"?>
<com.wisecleaner.views.CustomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wise="http://schemas.android.com/apk/res/com.wisecleaner.fastimizer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btnselector_empty"
    android:minHeight="40dp"
    wise:bordercolor="@color/silverback"
    wise:borders="bottom"
    wise:borderwidth="1dp" >

    <ImageView
        android:id="@+id/image_mm_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/about" />

    <TextView
        android:id="@+id/text_mm_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/image_mm_icon"
        android:textColor="@color/silvertext"/>

</com.wisecleaner.views.CustomLayout>
